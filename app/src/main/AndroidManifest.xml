<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mario.travelbuddyproyect">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main2Activity"
            android:label="@string/seccion_uno"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Main3Activity"
            android:label="@string/seccion_dos"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Main4Activity"
            android:label="@string/seccion_tres"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Main5Activity"
            android:label="@string/seccion_cuatro"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Main6Activity"
            android:label="@string/seccion_cinco"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Main7Activity"
            android:label="@string/seccion_seis"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".Main8Activity"
                  android:label="@string/seccion_uno_boton_uno"
                  android:parentActivityName=".Main2Activity">
        </activity>
    </application>

</manifest>